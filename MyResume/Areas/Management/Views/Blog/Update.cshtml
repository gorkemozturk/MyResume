@model MyResume.Models.Post
@{
    ViewData["Title"] = "Update the Post";
}

<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-antiforgery="true">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input class="form-control" asp-for="Title" />
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Body"></label>
                            <textarea asp-for="Body" class="form-control" rows="3"></textarea>
                            <span class="text-danger" asp-validation-for="Body"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-round">Update</button>
                            <a asp-action="Index" class="btn btn-default btn-round">Back to the List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}